<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_item_comment_head"
        android:contentDescription="@string/content"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/img_head"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/textView_item_comment_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageView_item_comment_star"
        app:layout_constraintLeft_toRightOf="@id/imageView_item_comment_head"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView_item_comment_star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/img_heart"
        android:contentDescription="@string/content" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_item_comment_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/content"
        app:layout_constraintTop_toBottomOf="@id/textView_item_comment_userName"
        app:layout_constraintLeft_toRightOf="@+id/imageView_item_comment_head"
        app:layout_constraintRight_toLeftOf="@id/imageView_item_comment_star"
        android:layout_marginStart="4dp" />
</android.support.constraint.ConstraintLayout>